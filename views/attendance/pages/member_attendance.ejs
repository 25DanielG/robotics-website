<!DOCTYPE html>
<html>
    <head>
        <title><%= username %></title>
        <%- include(__base + 'views/new/partials/favicon.ejs') %>

        <!-- External Styles -->
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

        <!-- Page Scripts-->

         <!-- Site Styles -->
         <link rel="stylesheet" href="/new/css/theme.css" />
         <link rel="stylesheet" href="/new/css/attendanceHeader.css" />
         <link rel="stylesheet" href="/new/css/attendanceMemberAttendance.css" />
         <link rel="stylesheet" href="/new/css/attendanceManager.css" />
        <script>
            var username = "<%= username %>";
        </script>

         <script src="/new/js/attendanceManager.js" type="text/javascript" defer></script>
        </head>
    <body>
        <%- include(__base + 'views/new/partials/attendanceHeader.ejs') %>
        <% if (auth.level >= ranks.lead) { %>
            <div id="admin-icons">
                <% if (auth.level >= ranks.director) { %>
                <a class="admin-icon" href="../attendance"><img class="admin-image" src="/new/img/svg/fullscreen_exit-24px.svg"></a>
                <a class="admin-icon" href="../attendance/attendance"><img class="admin-image" src="/new/img/svg/baseline-assignment-24px.svg"></a>
                <% } %>
                <a class="admin-icon" href="../attendance/scanner"><img class="admin-image" id="idk" src="/new/img/svg/baseline-linked_camera-24px.svg"></a>
            </div>
            <% } %>
        <h1 id="member-username"><%= username %></h1>
        <div id="rating-icons">
            <div class="rating-icon-a">
                <img class="rating-icon-image" src="/new/img/svg/outline-thumb_up-24px.svg" />
                <p class="rating-value green"><%= positiveRatings %></p>
            </div>
            <div class="rating-icon-a">
                <img class="rating-icon-image" src="/new/img/svg/outline-change_history-24px.svg" />
                <p class="rating-value gray"><%= neutralRatings %></p>
            </div>
            <div class="rating-icon-a">
                <img class="rating-icon-image" src="/new/img/svg/outline-thumb_down-24px.svg" />
                <p class="rating-value red"><%= negativeRatings %></p>
            </div>
        </div>
        <div id="big-wrapper">
        </div>
    </body>
</html>