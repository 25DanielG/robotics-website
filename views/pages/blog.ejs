<!DOCTYPE html>
<html>
  <head>
    <%- include(__base + 'views/partials/head.ejs') %>
    <style> header * { color: black !important} body, header { background-color: lightgray } </style>
    <link rel="stylesheet" type="text/css" href="/css/about.css">
  </head>
  <body>

    <!-- Navbar -->
    <%- include(__base + 'views/partials/navbar-main.ejs') %>

    <div class="list-group" style="margin-top: 74px">
      <% for (var post of posts) { %>
        <a href="#" class="list-group-item">
          <h3 class="list-group-item-heading"><%- post.title %></h3>
          <p style="color: lightgray; font-size: .9em; ">Updated
            <%-
            post.updated.toLocaleDateString('en-US', {
              weekday: "long", year: "numeric", month: "short",
              day: "numeric", hour: "2-digit", minute: "2-digit"
            })
            %></p>
          <div class="list-group-item-text" style="font-size: 1.2em;"><%= post.content %></div>
        </a>
      <% } %>
    </div>

    <%- include(__base + 'views/partials/js-include.ejs') %>

  </body>
</html>
