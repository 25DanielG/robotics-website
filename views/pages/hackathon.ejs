<!DOCTYPE html>
<html>
  <head>
    <title> Hackathon | Harker Robotics 1072 </title>
    <link rel="stylesheet" type="text/css" href="css/hackathon.css" />
    <%- include ../partials/head.ejs %>
  </head>
  <body>

    <!-- Navbar -->
    <%- include ../partials/navbar-main.ejs %>

    <header id="hackathon-tile">
      <div class="container-fluid">
        <h1 class="title"> HACKATHON SIGN-UP </h1>
        <div id="hackathon-form-container">
          <form id="hackathon-form" class="hackathon-form form-horizontal" method="post">
            <div class="form-group">
              <label for="hackathon-full-name" class="col-sm-2 control-label">* Full Name</label>
              <div class="col-sm-10">
                <input type="text" class="hackathon-form form-control" placeholder="Name" name="hackathon-full-name" id="hackathon-full-name" required="true" />
              </div>
            </div>
            <div class="form-group">
              <label for="hackathon-email" class="col-sm-2 control-label">* Email</label>
              <div class="col-sm-10">
                <input type="email" class="hackathon-form form-control" placeholder="Email" name="hackathon-email" id="hackathon-email" required="true" />
              </div>
            </div>
            <div class="form-group">
              <label for="hackathon-github" class="col-sm-2 control-label">Github</label>
              <div class="col-sm-10">
                <input type="text" class="hackathon-form form-control" placeholder="Username" name="hackathon-github" id="hackathon-github" />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox checkbox-btn">
                  <label>
                    <input type="checkbox" class="hackathon-form" name="hackathon-frc-affiliated" id="hackathon-frc-affiliated" /> I am registered on an FRC team
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group" id="hackathon-frc-team-name-group">
              <label for="hackathon-on-frc-team" class="col-sm-2 control-label">* FRC Affiliation</label>
              <div class="col-sm-10">
                <input type="text" class="hackathon-form form-control" placeholder="Your Team" name="hackathon-frc-team-name" id="hackathon-frc-team-name" disabled required="true" />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </header>

    <%- include ../partials/js-include.ejs %>
    <script src="js/hackathon.js"></script>

  </body>
</html>
